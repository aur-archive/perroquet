post_install() {
gtk-update-icon-cache -f -q /usr/share/icons/hicolor
update-desktop-database -q
update-mime-database /usr/share/mime
}
post_upgrade() {
  post_install $1
}
post_remove() {
update-mime-database /usr/share/mime
update-desktop-database -q
gtk-update-icon-cache -f -q /usr/share/icons/hicolor
}
